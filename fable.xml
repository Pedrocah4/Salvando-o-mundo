<fable>
	<page background="bg3.png">
    <agent text="Pedrinho precisa salvar o mundo dos zumbis." x="20" y="430" color="white" font-size="22" on-touch="frase2">
      <frase2 text="Portanto, acompanhe ele nessa jornada." x="20" y="450" font-size="22" color="white"/>
    </agent>
    <agent img="floor2.png" x="0" y="0" width="100" height="100" />
    <agent img="floor2.png" x="100" y="0" width="100" height="100" />
    <agent img="floor2.png" x="200" y="0" width="100" height="100" />
    <agent img="floor2.png" x="300" y="0" width="100" height="100" />
    <agent img="floor2.png" x="400" y="0" width="100" height="100" />
    
    <agent img="Idle (1).png" x="220" y="90" width="90" height="100"/>
    
    <agent img="door2.png" x="400" y="100" width="75" height="100" on-touch="door-open"> 
    	<door-open img="door3.png" on-touch="_NEXT_PAGE" />
    </agent>
    
    
  </page>
  <page background="bg1.png">
    <agent text="Transforme Pedrinho em um formidável cavaleiro com esse cogumelo mágico." x="20" y="430" font-size="22" on-touch="frase3">
      <frase3 text="Uau!! Ele virou um grande cavaleiro!!" x="20" y="450" font-size="22"/>
    </agent>
    <agent img="ground1.png" x="0" y="0" width="100" height="100" />
    <agent img="ground2.png" x="100" y="0" width="100" height="100" />
    <agent img="ground2.png" x="200" y="0" width="100" height="100" />
    <agent img="ground2.png" x="300" y="0" width="100" height="100" />
    <agent img="ground2.png" x="400" y="0" width="100" height="100" />
    <agent img="Tree_2.png" x="300" y="100" width="100" height="200"/>
    
    <agent img="Idle (1).png" x="120" y="90" width="90" height="100" drop-zone="transformar" >
      <transformar img="cavaleiro.png" />
          
    </agent>
    
      
    <agent img="Mushroom_2.png" x="200" y="100" width="25" height="25" draggable="true" 
      on-drop="transformar" on-zone="disappear" on-trigger="disappear" >
      <disappear x="-100" />
    </agent>  
    <agent img="jump1.png" x="400" y="100" width="70" height="70" on-touch="_NEXT_PAGE" />
  
  </page>
  <page background="bg2.png">
    <agent text="Que viagem longa, pelo menos está acabando."   x="20" y="430" font-size="22" on-touch="frase4">
      <frase4 text="O perigo se aproxima!" x="20" y="450" font-size="22" />
    
    </agent>
    <agent img="sand1.png" x="0" y="0" width="100" height="100" />
    <agent img="sand2.png" x="100" y="0" width="100" height="100" />
    <agent img="sand2.png" x="200" y="0" width="100" height="100" />
    <agent img="sand2.png" x="300" y="0" width="100" height="100" />
    <agent img="sand2.png" x="400" y="0" width="100" height="100" />
    <agent img="Skeleton.png" x="300" y="95" width="100" height="50"/>
    <agent img="cavaleiro.png" x="120" y="90" width="90" height="100"/>
    <agent img="cactus.png" x="30" y="100" width="100" height="100"/>
    <agent img="jump1.png" x="400" y="100" width="70" height="70" on-touch="_NEXT_PAGE" />
    
  </page>
  <page background="noite_dark.png">
    <agent text="Mate os zumbis para salvar o dia."   x="20" y="450" color="white" font-size="22" on-touch="frase5">
      <frase5 text="Parabéns, você salvou o mundo." x="20" y="450" font-size="22" />
    </agent>
    
    <agent img="Tile (1).png" x="0" y="0" width="100" height="100" />
    <agent img="Tile (2).png" x="100" y="0" width="100" height="100" />
    <agent img="Tile (2).png" x="200" y="0" width="100" height="100" />
    <agent img="Tile (2).png" x="300" y="0" width="100" height="100" />
    <agent img="Tile (2).png" x="400" y="0" width="100" height="100" />
    <agent img="TombStone (1).png" x="30" y="100" width="50" height="50" />
    <agent img="Tree.png" x="400" y="100" width="100" height="125" />
    
    <agent img="zumbiM.png" x="300" y="90" width="90" height="100" drop-zone="matar">
      <matar x="-100" />
    
    </agent>
    <agent img="zumbiH (1).png" x="200" y="90" width="90" height="100" drop-zone="matar">
      <matar x="-100" />
    
    </agent>
    
    <agent img="cavaleiro.png" x="100" y="90" width="90" height="100" draggable="true" 
      on-drop="matar"/>
    
    
  
  
  
  
  
  </page>
  
</fable>